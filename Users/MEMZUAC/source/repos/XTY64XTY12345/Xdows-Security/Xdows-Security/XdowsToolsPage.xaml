<Page
    x:Class="Xdows_Security.XdowsToolsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Xdows_Security"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">
    
    <Grid Margin="64,16,64,0" VerticalAlignment="Top">
        <TabView IsAddTabButtonVisible="False" SelectionChanged="TabView_SelectionChanged">
            <TabViewItem Header="进程管理" IsClosable="False">
                <TabViewItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="14" FontWeight="SemiBold"/>
                    </DataTemplate>
                </TabViewItem.HeaderTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <CommandBar.Content>
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="TabTitle"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Margin="12,16,0,0"
                                           FontSize="16"/>
                                <ComboBox x:Name="SortCombo"
                                          Grid.Column="1"
                                          Margin="16,12,0,0"
                                          SelectionChanged="SortCombo_SelectionChanged"
                                          Width="120">
                                    <ComboBoxItem Content="名称" Tag="Name"/>
                                    <ComboBoxItem Content="PID" Tag="Id"/>
                                    <ComboBoxItem Content="内存" Tag="Memory"/>
                                </ComboBox>
                                <TextBox x:Name="SearchBox"
                                         Grid.Column="2"
                                         PlaceholderText="键入要搜索的内容..."
                                         HorizontalAlignment="Center"
                                         Width="Auto"
                                         MinWidth="240"
                                         Margin="16,12,0,0"
                                         TextChanged="SearchBox_TextChanged"/>
                            </Grid>
                        </CommandBar.Content>
                        <AppBarButton Icon="Refresh" Label="刷新列表" Click="Refresh_Click"/>
                        <AppBarButton Icon="Cancel" Label="结束进程" Click="Kill_Click"/>
                    </CommandBar>
                    <ListView x:Name="ProcessList" Grid.Row="1" SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="14"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Id}" FontSize="14"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Memory}" FontSize="14"/>
                                    <Grid.ContextFlyout>
                                        <MenuFlyout x:Name="ItemMenuFlyout">
                                            <MenuFlyoutItem Text="刷新列表" Click="Refresh_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE72C;"  />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutSeparator/>
                                            <MenuFlyoutItem Text="终止进程" Click="Kill_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xF140;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Grid.ContextFlyout>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>
            
            <TabViewItem Header="命令行" IsClosable="False">
                <TabViewItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="14" FontWeight="SemiBold"/>
                    </DataTemplate>
                </TabViewItem.HeaderTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0" Background="Transparent" DefaultLabelPosition="Right">
                        <CommandBar.Content>
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="CmdTabTitle"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Margin="12,16,0,0"
                                           FontSize="16"
                                           Text="命令行工具"/>
                            </Grid>
                        </CommandBar.Content>
                        <AppBarButton Icon="Clear" Label="清空输出" Click="ClearOutput_Click"/>
                        <AppBarButton Icon="Copy" Label="复制输出" Click="CopyOutput_Click"/>
                    </CommandBar>
                    <Border Grid.Row="1" 
                            Margin="16,8,16,0" 
                            CornerRadius="8" 
                            Background="#F5F5F5" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch">
                            <TextBox x:Name="CmdOutput"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     AcceptsReturn="True"
                                     VerticalAlignment="Stretch"
                                     HorizontalAlignment="Stretch"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="12"
                                     Margin="0"/>
                        </ScrollViewer>
                    </Border>
                    <Grid Grid.Row="2" Margin="16,12,16,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" 
                                CornerRadius="6" 
                                Background="White" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1"
                                Margin="0,0,8,0">
                            <TextBox x:Name="CmdInput"
                                     PlaceholderText="输入命令..."
                                     KeyDown="CmdInput_KeyDown"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="12,8"
                                     FontFamily="Segoe UI"
                                     FontSize="14"
                                     VerticalAlignment="Center"
                                     Height="40"/>
                        </Border>
                        <Button x:Name="ExecuteButton"
                                Grid.Column="1"
                                Content="执行"
                                Click="ExecuteButton_Click"
                                MinWidth="80"
                                Height="40"
                                CornerRadius="6"
                                Background="#0078D4"
                                Foreground="White"
                                Margin="0">
                            <Button.Flyout>
                                <Flyout>
                                    <TextBlock Text="按Enter键也可执行命令" FontSize="12" Foreground="Gray"/>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </Grid>
                </Grid>
            </TabViewItem>
        </TabView>
    </Grid>
</Page>