<Page
    x:Class="Xdows_Security.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <FontIcon x:Name="Icon" Margin="0,-25,0,0" Glyph="&#xE73E;" FontSize="124" FontWeight="Bold"/>
        <TextBlock Margin="0,12,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="HomePage_TextBlock" FontSize="24" FontWeight="Bold"/>
        <TextBlock Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="HomePage_TextBlock1" FontSize="15" FontWeight="Bold"/>

        <TextBox
                x:Name="LogTextBox"
                IsReadOnly="True"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                Margin="96,24,96,0"
                MinHeight="200"/>
    </StackPanel>
</Page>