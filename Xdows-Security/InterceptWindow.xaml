<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Xdows_Security.InterceptWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:l="using:WinUI3Localizer"
    mc:Ignorable="d">
    <StackPanel x:Name="RootPanel">
        <TitleBar x:Name="TitleBarControl" Height="48" l:Uids.Uid="InterceptWindow_Title"></TitleBar>
        <Border Padding="20,0,20,20">
            <StackPanel>
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{ThemeResource ControlFillColorDefaultBrush}" CornerRadius="8" Width="48" Height="48" Margin="0,0,12,0" BorderThickness="1" BorderBrush="{ThemeResource ControlElevationBorderBrush}">
                        <FontIcon Glyph="&#xE7BA;" FontSize="24" Foreground="{ThemeResource SystemFillColorCriticalBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="ThreatTitleText" l:Uids.Uid="InterceptWindow_ThreatTitle" FontSize="18" FontWeight="SemiBold" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                        <TextBlock x:Name="ThreatSubtitleText" l:Uids.Uid="InterceptWindow_ThreatSubtitle" FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,3,0,0"/>
                    </StackPanel>
                </Grid>

                <Border Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="14" Margin="0,0,0,12" BorderThickness="1" BorderBrush="{ThemeResource ControlElevationBorderBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock x:Name="ProgramNameText" FontSize="14" FontWeight="SemiBold" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                            <TextBlock x:Name="FilePathText" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,3,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{ThemeResource SystemFillColorCautionBackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,6,0" BorderThickness="1" BorderBrush="{ThemeResource SystemFillColorCautionBrush}">
                        <StackPanel>
                            <TextBlock x:Name="ThreatTypeLabelText" l:Uids.Uid="InterceptWindow_ThreatTypeLabel" FontSize="11"/>
                            <TextBlock x:Name="ThreatTypeText" l:Uids.Uid="InterceptWindow_ThreatType_Default" FontSize="13" FontWeight="SemiBold" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}" CornerRadius="8" Padding="12" Margin="6,0,0,0" BorderThickness="1" BorderBrush="{ThemeResource SystemFillColorCriticalBrush}">
                        <StackPanel>
                            <TextBlock x:Name="ThreatLevelLabelText" l:Uids.Uid="InterceptWindow_ThreatLevelLabel" FontSize="11"/>
                            <TextBlock x:Name="ThreatLevelText" l:Uids.Uid="InterceptWindow_ThreatLevel_High" FontSize="13" FontWeight="SemiBold" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,12" BorderThickness="1" BorderBrush="{ThemeResource SystemFillColorSuccessBrush}">
                    <StackPanel>
                        <TextBlock x:Name="DetectionTimeLabelText" l:Uids.Uid="InterceptWindow_DetectionTimeLabel" FontSize="11" FontWeight="Medium"/>
                        <TextBlock x:Name="DetectionTimeText" FontSize="13" Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="{ThemeResource ControlFillColorDefaultBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,16" BorderThickness="1" BorderBrush="{ThemeResource ControlElevationBorderBrush}">
                    <StackPanel>
                        <TextBlock x:Name="SecurityAdviceLabelText" l:Uids.Uid="InterceptWindow_SecurityAdviceLabel" FontSize="11" FontWeight="Medium"/>
                        <TextBlock x:Name="SecurityAdviceText" l:Uids.Uid="InterceptWindow_SecurityAdviceText" FontSize="12" Margin="0,3,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <SplitButton
                         Grid.Column="0" 
                        x:Name="TrustButton"
                        l:Uids.Uid="InterceptWindow_TrustButton"
                        Width="160" 
                        Height="36" 
                        Margin="0,0,8,0"
                        Click="RestoreTrustButton_Click"
                        HorizontalAlignment="Stretch">
                        <SplitButton.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem x:Name="TrustOnlyMenuItem" l:Uids.Uid="InterceptWindow_TrustOnly" Click="TrustOnlyMenuItem_Click"/>
                                <MenuFlyoutItem x:Name="RestoreOnlyMenuItem" l:Uids.Uid="InterceptWindow_RestoreOnly" Click="RestoreOnlyMenuItem_Click"/>
                            </MenuFlyout>
                        </SplitButton.Flyout>
                    </SplitButton>
                    <Button Grid.Column="1" 
                        x:Name="ConfirmButton"
                        Width="160" 
                        Height="36" 
                        Margin="8,0,0,0"
                        Click="ConfirmButton_Click"
                        HorizontalAlignment="Stretch"
                        Style="{StaticResource AccentButtonStyle}"/>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>
