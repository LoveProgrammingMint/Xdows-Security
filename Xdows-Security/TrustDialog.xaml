<ContentDialog x:Class="Xdows_Security.TrustDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:l="using:WinUI3Localizer"
               DefaultButton="Primary"
               CornerRadius="8"
               l:Uids.Uid="TrustDialog_Dialog"
               xmlns:local="using:TrustQuarantine">

    <StackPanel>
        <ListView x:Name="TrustListView" SelectionMode="Multiple">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:TrustItemModel">
                    <StackPanel> 
                        <TextBlock Text="{x:Bind Path}" VerticalAlignment="Center"/>
                        <TextBlock Text="{x:Bind Hash}" Opacity="0.75" IsTextSelectionEnabled="True" VerticalAlignment="Center" FontSize="10"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem l:Uids.Uid="TrustDialog_DeleteMenuItem" Click="DeleteMenuItem_Click"/>
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem l:Uids.Uid="TrustDialog_AddMenuItem"    Click="AddMenuItem_Click"/>
                    <MenuFlyoutItem l:Uids.Uid="TrustDialog_ClearMenuItem"  Click="ClearMenuItem_Click"/>
                </MenuFlyout>
            </ListView.ContextFlyout>
        </ListView>

        <StackPanel Margin="0,24,0,0" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="4">
            <Button l:Uids.Uid="TrustDialog_AddButton"    Click="AddMenuItem_Click"/>
            <Button l:Uids.Uid="TrustDialog_DeleteButton" Click="DeleteMenuItem_Click"/>
            <Button l:Uids.Uid="TrustDialog_ClearButton"  Click="ClearMenuItem_Click"/>
        </StackPanel>
    </StackPanel>
</ContentDialog>
