<ContentDialog x:Class="Xdows_Security.TrustDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Title="信任区管理"
               PrimaryButtonText="添加"
               SecondaryButtonText="关闭"
               xmlns:local="using:TrustQuarantine">

    <StackPanel>
        <ListView x:Name="TrustListView">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:TrustItemModel">
                    <StackPanel>
                        <TextBlock Text="{Binding Path}" />
                        <TextBlock Text="{Binding Hash}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Content="添加信任项" Click="AddButton_Click" />
        <Button Content="清空信任区" Click="ClearButton_Click" />
    </StackPanel>
</ContentDialog>
