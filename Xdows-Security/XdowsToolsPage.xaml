<Page
    x:Class="Xdows_Security.XdowsToolsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Xdows_Security"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Margin="64,16,64,0" VerticalAlignment="Top">
        <TabView IsAddTabButtonVisible="False" SelectionChanged="TabView_SelectionChanged">
            <TabViewItem Header="进程管理" IsClosable="False">
                <TabViewItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="14" FontWeight="SemiBold"/>
                    </DataTemplate>
                </TabViewItem.HeaderTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <CommandBar.Content>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock x:Name="TabTitle"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Margin="12,16,0,0"
                                       FontSize="16"/>
                                <ComboBox x:Name="SortCombo"
                                      SelectionChanged="SortCombo_SelectionChanged"
                                      Margin="16,12,0,0" Width="120">
                                    <ComboBoxItem Content="名称" Tag="Name"/>
                                    <ComboBoxItem Content="PID" Tag="Id"/>
                                    <ComboBoxItem Content="内存" Tag="Memory"/>
                                </ComboBox>
                            </StackPanel>
                        </CommandBar.Content>
                        <AppBarButton Icon="Refresh" Label="刷新列表" Click="Refresh_Click"/>
                        <AppBarButton Icon="Cancel" Label="结束进程" Click="Kill_Click"/>
                    </CommandBar>
                    <ListView x:Name="ProcessList" Grid.Row="1" SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="14"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Id}" FontSize="14"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Memory}" FontSize="14"/>
                                    <Grid.ContextFlyout>
                                        <MenuFlyout x:Name="ItemMenuFlyout">
                                            <MenuFlyoutItem Text="刷新列表" Click="Refresh_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE72C;"  />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutSeparator/>
                                            <MenuFlyoutItem Text="终止进程" Click="Kill_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xF140;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Grid.ContextFlyout>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>
        </TabView>
    </Grid>
</Page>