<Page
    x:Class="Xdows_Security.XdowsToolsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Xdows_Security"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">
    <Grid Margin="64,16,64,0" VerticalAlignment="Top">
        <TabView IsAddTabButtonVisible="False" SelectionChanged="TabView_SelectionChanged" TabWidthMode="Equal">
            <TabViewItem Header="进程管理器" IsClosable="False">
                <TabViewItem.IconSource>
                    <FontIconSource Glyph="&#xE9D9;"/>
                </TabViewItem.IconSource>
                <TabViewItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Style="{ThemeResource BaseTextBlockStyle}"/>
                    </DataTemplate>
                </TabViewItem.HeaderTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <CommandBar.Content>
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="TabTitle"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Margin="12,16,0,0"
                                           FontSize="16"/>
                                <ComboBox x:Name="SortCombo"
                                          Grid.Column="1"
                                          Margin="16,12,0,0"
                                          SelectionChanged="SortCombo_SelectionChanged"
                                          Width="120">
                                    <ComboBoxItem Content="名称" Tag="Name"/>
                                    <ComboBoxItem Content="PID" Tag="Id"/>
                                    <ComboBoxItem Content="内存" Tag="Memory"/>
                                </ComboBox>
                                <TextBox x:Name="SearchBox"
                                         Grid.Column="2"
                                         PlaceholderText="键入要搜索的内容..."
                                         HorizontalAlignment="Center"
                                         Width="Auto"
                                         MinWidth="240"
                                         Margin="16,12,0,0"
                                         TextChanged="SearchBox_TextChanged"/>
                            </Grid>
                        </CommandBar.Content>
                        <AppBarButton Icon="Refresh" Label="刷新列表" Click="Refresh_Click"/>
                        <AppBarButton Icon="Cancel" Label="结束进程" Click="Kill_Click"/>
                    </CommandBar>
                    <ListView x:Name="ProcessList" Grid.Row="1" SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="14"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Id}" FontSize="14"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Memory}" FontSize="14"/>
                                    <Grid.ContextFlyout>
                                        <MenuFlyout x:Name="ItemMenuFlyout">
                                            <MenuFlyoutItem Text="刷新列表" Click="Refresh_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE72C;"  />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutSeparator/>
                                            <MenuFlyoutItem Text="终止进程" Click="Kill_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xF140;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Grid.ContextFlyout>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>

            <TabViewItem Header="命令提示符" IsClosable="False">
                <TabViewItem.IconSource>
                    <FontIconSource Glyph="&#xE756;"/>
                </TabViewItem.IconSource>
                <TabViewItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Style="{ThemeResource BaseTextBlockStyle}"/>
                    </DataTemplate>
                </TabViewItem.HeaderTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
                        <CommandBar.Content>
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="CmdTabTitle"
                                           Margin="12,16,0,0"
                                           FontSize="16"
                                           Text="命令提示符"/>
                            </Grid>
                        </CommandBar.Content>
                        <AppBarButton Icon="Clear" Label="清空输出" Click="ClearOutput_Click"/>
                        <AppBarButton Icon="Copy" Label="复制输出" Click="CopyOutput_Click"/>
                    </CommandBar>
                    <Border Grid.Row="1" 
                            Margin="16,8,16,0" 
                            BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch">
                            <TextBox x:Name="CmdOutput"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     FontSize="12"
                                     Text="命令提示符启动成功，请输入相关命令。"
                                     AcceptsReturn="True"
                                     VerticalAlignment="Stretch"
                                     HorizontalAlignment="Stretch"
                                     Padding="12"
                                     Margin="0"/>
                        </ScrollViewer>
                    </Border>
                    <Grid Grid.Row="2" Margin="16,5,16,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="CmdInput"
                            PlaceholderText="输入命令..."
                            KeyDown="CmdInput_KeyDown"
                            VerticalAlignment="Center"
                            Height="30"/>
                        <Button x:Name="ExecuteButton"
                            Grid.Column="1"
                            Content="执行"
                            Click="ExecuteButton_Click"
                            MinWidth="80"
                            Height="30"
                            Style="{StaticResource AccentButtonStyle}"
                            Margin="8,0,0,0"/>
                    </Grid>
                </Grid>
            </TabViewItem>

            <TabViewItem Header="弹窗拦截器" IsClosable="False">
                <TabViewItem.IconSource>
                    <FontIconSource Glyph="&#xEA0D;"/>
                </TabViewItem.IconSource>
                <TabViewItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Style="{ThemeResource BaseTextBlockStyle}"/>
                    </DataTemplate>
                </TabViewItem.HeaderTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <CommandBar.Content>
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="PopupTabTitle"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Margin="12,16,0,0"
                                           Text="弹窗拦截器"
                                           FontSize="16"/>
                                <ComboBox x:Name="PopupSortCombo"
                                          Grid.Column="1"
                                          Margin="16,12,0,0"
                                          SelectionChanged="PopupSortCombo_SelectionChanged"
                                          Width="120">
                                    <ComboBoxItem Content="标题" Tag="Title"/>
                                    <ComboBoxItem Content="状态" Tag="Status"/>
                                    <ComboBoxItem Content="进程" Tag="Process"/>
                                </ComboBox>
                                <TextBox x:Name="PopupSearchBox"
                                         Grid.Column="2"
                                         PlaceholderText="键入要搜索的内容..."
                                         HorizontalAlignment="Center"
                                         Width="Auto"
                                         MinWidth="240"
                                         Margin="16,12,0,0"
                                         TextChanged="PopupSearchBox_TextChanged"/>
                            </Grid>
                        </CommandBar.Content>
                        <AppBarButton Icon="Add" Label="添加规则" Click="AddPopupRule_Click"/>
                        <AppBarButton Icon="Delete" Label="删除规则" Click="DeletePopupRule_Click"/>
                        <AppBarButton Icon="Refresh" Label="刷新列表" Click="RefreshPopupList_Click"/>
                    </CommandBar>
                    <ListView x:Name="PopupRuleList" Grid.Row="1" SelectionMode="Single" Margin="0,16,0,0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{Binding Title}" FontSize="14" TextWrapping="Wrap"/>
                                    <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{Binding ProcessName}" FontSize="14"/>
                                    <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{Binding Status}" FontSize="14"/>
                                    <ToggleSwitch Grid.Column="3" IsOn="{Binding IsEnabled}" Toggled="PopupRuleToggle_Toggled" MinWidth="60"/>
                                    <Grid.ContextFlyout>
                                        <MenuFlyout x:Name="PopupItemMenuFlyout">
                                            <MenuFlyoutItem Text="编辑规则" Click="EditPopupRule_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE70F;"  />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutSeparator/>
                                            <MenuFlyoutItem Text="删除规则" Click="DeletePopupRule_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE107;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Grid.ContextFlyout>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>
        </TabView>
    </Grid>
</Page>