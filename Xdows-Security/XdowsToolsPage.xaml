<Page
    x:Class="Xdows_Security.XdowsToolsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Xdows_Security"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">
    <Grid Margin="64,16,64,0" VerticalAlignment="Top">
        <TabView IsAddTabButtonVisible="False" SelectionChanged="TabView_SelectionChanged">
            <TabViewItem Header="进程管理" IsClosable="False">
                <TabViewItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Style="{ThemeResource BaseTextBlockStyle}"/>
                    </DataTemplate>
                </TabViewItem.HeaderTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0">
                        <CommandBar.Content>
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="TabTitle"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Margin="12,16,0,0"
                                           FontSize="16"/>
                                <ComboBox x:Name="SortCombo"
                                          Grid.Column="1"
                                          Margin="16,12,0,0"
                                          SelectionChanged="SortCombo_SelectionChanged"
                                          Width="120">
                                    <ComboBoxItem Content="名称" Tag="Name"/>
                                    <ComboBoxItem Content="PID" Tag="Id"/>
                                    <ComboBoxItem Content="内存" Tag="Memory"/>
                                </ComboBox>
                                <TextBox x:Name="SearchBox"
                                         Grid.Column="2"
                                         PlaceholderText="键入要搜索的内容..."
                                         HorizontalAlignment="Center"
                                         Width="Auto"
                                         MinWidth="240"
                                         Margin="16,12,0,0"
                                         TextChanged="SearchBox_TextChanged"/>
                            </Grid>
                        </CommandBar.Content>
                        <AppBarButton Icon="Refresh" Label="刷新列表" Click="Refresh_Click"/>
                        <AppBarButton Icon="Cancel" Label="结束进程" Click="Kill_Click"/>
                    </CommandBar>
                    <ListView x:Name="ProcessList" Grid.Row="1" SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="14"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Id}" FontSize="14"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Memory}" FontSize="14"/>
                                    <Grid.ContextFlyout>
                                        <MenuFlyout x:Name="ItemMenuFlyout">
                                            <MenuFlyoutItem Text="刷新列表" Click="Refresh_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE72C;"  />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutSeparator/>
                                            <MenuFlyoutItem Text="终止进程" Click="Kill_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xF140;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Grid.ContextFlyout>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>

            <TabViewItem Header="命令提示符" IsClosable="False">
                <TabViewItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Style="{ThemeResource BaseTextBlockStyle}"/>
                    </DataTemplate>
                </TabViewItem.HeaderTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
                        <CommandBar.Content>
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="CmdTabTitle"
                                           Margin="12,16,0,0"
                                           FontSize="16"
                                           Text="命令提示符"/>
                            </Grid>
                        </CommandBar.Content>
                        <AppBarButton Icon="Clear" Label="清空输出" Click="ClearOutput_Click"/>
                        <AppBarButton Icon="Copy" Label="复制输出" Click="CopyOutput_Click"/>
                    </CommandBar>
                    <Border Grid.Row="1" 
                            Margin="16,8,16,0" 
                            BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch">
                            <TextBox x:Name="CmdOutput"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     FontSize="12"
                                     Text="命令提示符启动成功，请输入相关命令。"
                                     AcceptsReturn="True"
                                     VerticalAlignment="Stretch"
                                     HorizontalAlignment="Stretch"
                                     Padding="12"
                                     Margin="0"/>
                        </ScrollViewer>
                    </Border>
                    <Grid Grid.Row="2" Margin="16,5,16,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="CmdInput"
                                     PlaceholderText="输入命令..."
                                     KeyDown="CmdInput_KeyDown"
                                     VerticalAlignment="Center"
                                     Height="30"/>
                        <Button x:Name="ExecuteButton"
                                Grid.Column="1"
                                Content="执行"
                                Click="ExecuteButton_Click"
                                MinWidth="80"
                                Height="30"
                                Style="{StaticResource AccentButtonStyle}"
                                Margin="8,0,0,0">
                            <Button.Flyout>
                                <Flyout>
                                    <TextBlock Text="按 Enter 键也可执行命令" FontSize="12"/>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </Grid>
                </Grid>
            </TabViewItem>

            <TabViewItem Header="系统修复" IsClosable="False">
                <TabViewItem.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Style="{ThemeResource BaseTextBlockStyle}"/>
                    </DataTemplate>
                </TabViewItem.HeaderTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
                        <CommandBar.Content>
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="RepairTabTitle"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Margin="12,16,0,0"
                                           FontSize="16"
                                           Text="系统修复工具"/>
                            </Grid>
                        </CommandBar.Content>
                        <AppBarButton Icon="Refresh" Label="开始扫描" Click="StartRepairScan_Click"/>
                        <AppBarButton Icon="Stop" Label="停止扫描" Click="StopRepairScan_Click"/>
                    </CommandBar>

                    <Grid Grid.Row="1" Margin="16,8,16,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 扫描进度区域 -->
                        <Border Grid.Row="0" 
                                CornerRadius="8" 
                                Background="#F0F8FF" 
                                BorderBrush="#0078D4" 
                                BorderThickness="1"
                                Margin="0,0,0,8">
                            <Grid Padding="16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 扫描状态 -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock x:Name="ScanStatus" Text="准备就绪" FontSize="14" FontWeight="SemiBold" Foreground="#0078D4"/>
                                    <TextBlock x:Name="ScanProgressText" Text="" FontSize="12" Margin="8,0,0,0" Foreground="Gray"/>
                                </StackPanel>

                                <!-- 进度条 -->
                                <ProgressBar x:Name="ScanProgressBar" 
                                           Grid.Row="1" 
                                           Height="20" 
                                           Minimum="0" 
                                           Maximum="100" 
                                           Value="0" 
                                           Margin="0,0,0,8"
                                           Foreground="#0078D4"/>

                                <!-- 当前扫描项 -->
                                <TextBlock x:Name="CurrentScanItem" 
                                         Grid.Row="2" 
                                         Text="等待开始扫描..." 
                                         FontSize="12" 
                                         Foreground="#333"
                                         TextWrapping="Wrap"/>
                            </Grid>
                        </Border>

                        <!-- 扫描结果列表 -->
                        <Border Grid.Row="1" 
                                CornerRadius="8" 
                                Background="#FFFFFF" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- 结果标题 -->
                                <TextBlock Grid.Row="0" 
                                           Text="检测到的风险项" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Margin="12,8,12,4"/>

                                <!-- 风险项列表 -->
                                <ListView x:Name="RiskItemsList" 
                                         Grid.Row="1" 
                                         SelectionMode="Multiple"
                                         Margin="8,0,8,8">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 严重程度图标 -->
                                                <FontIcon Grid.Column="0" 
                                                         Glyph="{Binding RiskIcon}" 
                                                         Foreground="{Binding RiskColor}" 
                                                         FontSize="16" 
                                                         Margin="0,0,8,0"/>

                                                <!-- 风险项信息 -->
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Location}" FontSize="11" Foreground="#666" TextWrapping="Wrap"/>
                                                </StackPanel>

                                                <!-- 严重程度标签 -->
                                                <Border Grid.Column="2" 
                                                        Background="{Binding RiskColor}" 
                                                        CornerRadius="4" 
                                                        Padding="8,4">
                                                    <TextBlock Text="{Binding RiskLevel}" FontSize="11" Foreground="White" FontWeight="SemiBold"/>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- 操作按钮区域 -->
                    <Grid Grid.Row="2" Margin="16,8,16,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   x:Name="RepairSummary" 
                                   Text="准备开始系统扫描..." 
                                   FontSize="12" 
                                   VerticalAlignment="Center" 
                                   Foreground="#666"/>

                        <Button x:Name="SelectAllButton"
                                Grid.Column="1" 
                                Content="全选" 
                                Click="SelectAll_Click" 
                                MinWidth="80" 
                                Height="35" 
                                CornerRadius="6" 
                                Background="#F0F0F0" 
                                Foreground="#333" 
                                Margin="0,0,8,0"/>

                        <Button x:Name="RepairSelectedButton"
                                Grid.Column="2" 
                                Content="修复选中项" 
                                Click="RepairSelected_Click" 
                                MinWidth="100" 
                                Height="35" 
                                CornerRadius="6" 
                                Background="#FF6B35" 
                                Foreground="White" 
                                Margin="0,0,8,0"/>

                        <Button x:Name="RepairAllButton"
                                Grid.Column="3" 
                                Content="修复全部" 
                                Click="RepairAll_Click" 
                                MinWidth="80" 
                                Height="35" 
                                CornerRadius="6" 
                                Background="#D32F2F" 
                                Foreground="White"/>
                    </Grid>
                </Grid>
            </TabViewItem>
        </TabView>
    </Grid>
</Page>